<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart - Restaurant Order</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Update quantity
    async function updateQuantity(menuItemId, quantity) {
      try {
        const response = await fetch('/cart/update', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ menuItemId, quantity })
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Reload page to reflect changes
          window.location.reload();
        } else {
          alert('Error updating cart: ' + result.error);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error updating cart');
      }
    }

    // Remove item
    async function removeItem(menuItemId) {
      if (confirm('Remove this item from cart?')) {
        try {
          const response = await fetch('/cart/remove', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ menuItemId })
          });
          
          const result = await response.json();
          
          if (result.success) {
            window.location.reload();
          } else {
            alert('Error removing item: ' + result.error);
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error removing item');
        }
      }
    }

    // Quantity change handler
    function onQuantityChange(menuItemId, input) {
      const quantity = parseInt(input.value);
      if (quantity > 0) {
        updateQuantity(menuItemId, quantity);
      }
    }
  </script>
</head>
<body class="bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b">
    <div class="max-w-6xl mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">Shopping Cart</h1>
        <div class="flex items-center gap-4">
          <a href="/menu" class="text-blue-600 hover:text-blue-800 font-medium">
            ‚Üê Continue Shopping
          </a>
          <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm">
            <%= cartCount %> items
          </span>
        </div>
      </div>
    </div>
  </header>

  <!-- Cart Content -->
  <main class="max-w-4xl mx-auto px-4 py-8">
    <% if (cart.length === 0) { %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üõí</div>
        <h2 class="text-2xl font-bold text-gray-600 mb-4">Your cart is empty</h2>
        <p class="text-gray-500 mb-6">Add some delicious items from our menu!</p>
        <a href="/menu" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
          Browse Menu
        </a>
      </div>
    <% } else { %>
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-bold mb-6">Order Summary</h2>
          
          <div class="space-y-4">
            <% cart.forEach(item => { %>
              <div class="flex items-center gap-4 p-4 border rounded-lg">
                <img src="<%= item.photo %>" alt="<%= item.name %>" 
                     class="w-16 h-16 object-cover rounded-lg">
                
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-800"><%= item.name %></h3>
                  <p class="text-blue-600 font-medium">
                    <%= item.price.toLocaleString() %> RWF each
                  </p>
                </div>
                
                <div class="flex items-center gap-2">
                  <button onclick="updateQuantity('<%= item.menuItemId %>', <%= item.quantity - 1 %>)"
                          class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300"
                          <% if (item.quantity <= 1) { %>disabled<% } %>>
                    -
                  </button>
                  
                  <input type="number" value="<%= item.quantity %>" min="1" 
                         class="w-16 text-center border rounded px-2 py-1"
                         onchange="onQuantityChange('<%= item.menuItemId %>', this)">
                  
                  <button onclick="updateQuantity('<%= item.menuItemId %>', <%= item.quantity + 1 %>)"
                          class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                    +
                  </button>
                </div>
                
                <div class="text-right">
                  <p class="font-semibold text-gray-800">
                    <%= (item.price * item.quantity).toLocaleString() %> RWF
                  </p>
                  <button onclick="removeItem('<%= item.menuItemId %>')"
                          class="text-red-500 hover:text-red-700 text-sm mt-1">
                    Remove
                  </button>
                </div>
              </div>
            <% }) %>
          </div>
          
          <!-- Cart Total -->
          <div class="border-t mt-6 pt-6">
            <div class="flex justify-between items-center mb-6">
              <span class="text-xl font-bold">Total:</span>
              <span class="text-2xl font-bold text-blue-600">
                <%= total.toLocaleString() %> RWF
              </span>
            </div>
            
            <div class="flex gap-4">
              <a href="/menu" 
                 class="flex-1 bg-gray-200 text-gray-800 py-3 px-6 rounded-lg text-center hover:bg-gray-300 transition-colors">
                Continue Shopping
              </a>
              <a href="/checkout" 
                 class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg text-center hover:bg-blue-700 transition-colors">
                Proceed to Checkout
              </a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </main>
</body>
</html>